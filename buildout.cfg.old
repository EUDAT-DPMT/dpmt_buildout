[buildout]
extensions = mr.developer

extends =
    https://raw.github.com/collective/buildout.plonetest/master/test-4.3.x.cfg

parts =
    instance

sources = sources

eggs =
    Plone
    Pillow
    Products.PloneHotfix20151208
    plone4.csrffixes
#   custom stuff starts here
    pcp.contenttypes
    pcp.cregsync
    collective.contentstats
    collective.handleclient
    Products.AutoUserMakerPASPlugin
    Products.PloneFormGen
    z3c.jbot
    Plone
#    Pillow  # with pip from wheel insted
    Products.ATExtensions
    Products.DocFinderTab
    collective.contentstats
    Products.PloneHotfix20151208
    plone4.csrffixes
    pcp.contenttypes
    pcp.cregsync
    Products.ATBackRef
    Products.AutoUserMakerPASPlugin
    Products.ATVocabularyManager
    raptus.autocompletewidget
    Products.Poi
    incf.countryutils
    Products.PloneFormGen
    collective.jbot
    Products.UserAndGroupSelectionWidget

zcml =
#    plone.reload


var-dir=${buildout:directory}/var

backups-dir=${buildout:var-dir}

user=admin:wyGYhr2KQnrk

############################################
# Debug Options
# -------------
# Start Zope/Plone instances in "fg" mode to turn on debug mode;
# this will dramatically slow Plone.
#
# Add-on developers should turn deprecation warnings on
deprecation-warnings = off
# change verbose-security to "on" for useful security errors while developing
verbose-security = off

[instance]
recipe = plone.recipe.zope2instance
http-address = 8080

eggs = ${buildout:eggs}

[backupcronjob]
recipe = z3c.recipe.usercrontab
# every day at 1am 
times = 0 1 * * *
command = ${buildout:directory}/bin/backup
# no regular packing for now

